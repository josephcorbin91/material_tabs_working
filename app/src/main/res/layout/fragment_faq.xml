<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:scrollbars="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:text=" How can I vote on challenges?"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorGray1"
            android:text=" When you see a challenge you simply click \n which option best suits your oppinion."
            android:textSize="@dimen/text_size_13"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray1"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGray1"
            android:text=" How do I earn points?"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            android:text=" You earn points for every single action you \n perfom using our app. Likes, comments \n shares, entering a contest, creating a \n challenge , voting on challenges and responding."
            android:textSize="@dimen/text_size_13"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray1"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>